@model CITI_Oruro.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUDWeb.styles.css" asp-append-version="true" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      
</head>

<body>
    <div class="text-center">
        <hr />
        <h1>LOGIN</h1>
        <td>
            <img src="~/imagenes/siboruro.jpg" style="width: 250px;" />
        </td>
        <h3>CITI-ORURO</h3>
    </div>

    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cuenta" class="control-label"></label>
                <input asp-for="Cuenta" class="form-control" />
                <span asp-validation-for="Cuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        <label>
            <input type="checkbox" asp-for="EstadoUsuario" />
            Mantenerme conectado.
        </label>

        <div class="text-center">
            <input type="submit" value="INGRESAR" class="btn btn-primary btn-lg" />
        </div>
        @if (ViewData["ValidateMessage"] != null)
        {
                <br />
                <label> <b>@ViewData["ValidateMessage"]</b> </label>
        }

    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>

