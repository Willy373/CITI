@model IEnumerable<CITI_Oruro.Models.Ingeniero>

@{
    ViewData["Title"] = "Index";
}

<h1>LISTADO DE INGENIEROS ASOCIADOS</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Crear Nuevo</a>
</p>

<table class="table">
    <form asp-controller="Ingenieroes" asp-action="Index" method="get">
        <p>
            Buscar: <input type="text" name="buscar" class="form-text" />
            <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
        </p>
</form>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdIngeniero">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdIngeniero">Detalle</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdIngeniero">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
